<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/barkodEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/barkod_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/adEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/urun_adi_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/fiyatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kg_fiyati_hint"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/ekleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ekle_button" />

    <Button
        android:id="@+id/araButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ara_button" />

    <TextView
        android:id="@+id/sonucTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

</LinearLayout>